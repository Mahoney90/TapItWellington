<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/relative_layout_leaderboard"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape">

    <TextView
        android:id="@+id/leaderboard_position"
        android:text="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="10dp"/>


    <TextView
        android:id="@+id/leaderboard_beer_name"
        android:text="Garagista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/leaderboard_position"
        android:layout_toEndOf="@+id/leaderboard_position"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="19sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:id="@+id/leaderboard_count"
        android:text="15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingRight="10dp"/>

</RelativeLayout>