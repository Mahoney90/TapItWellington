<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/relative_layout_beer_history"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape"
              android:paddingTop="10dp"
              android:paddingBottom="10dp">


    <TextView
        android:id="@+id/beer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="Beer name"
        android:textSize="22sp"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/thumb_image_beer_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_thumb_up"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/user_rating"
        android:layout_toStartOf="@+id/user_rating"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:id="@+id/user_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:text="Rating"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/brewery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beer_name"
        android:text="Brewery"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>